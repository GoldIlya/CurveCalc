<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ZamerActivity">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/series"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/series_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/listPoint"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="2"
                            android:padding="5px" />
                    </LinearLayout>




                </LinearLayout>


                <com.androidplot.xy.XYPlot
                    android:id="@+id/plot"
                    style="@style/FullScreenGraph"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:rotationX="180"
                    app:domainOriginLineColor="@color/ap_transparent"
                    app:gridBackgroundColor="@color/white"
                    app:rangeOriginLineColor="@color/ap_transparent"
                    app:titleTextColor="@color/black" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/blockAddPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/etEnterVal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="8dp"
                            android:hint="Измерение"
                            android:inputType="number"
                            android:singleLine="true" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/btnEnterVal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:backgroundTint="@color/green"
                            android:src="@drawable/ic_add_circle_white_48dp"
                            android:tint="@color/green"
                            app:fabSize="normal" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/blockSdvig"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/numberPP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="№ "
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/znach"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text=""
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <Button
                                android:id="@+id/decrement_button"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_marginLeft="10dp"
                                android:backgroundTint="@color/green"
                                android:autoSizeMinTextSize="16dp"
                                android:text="-"
                                android:textColor="@color/black"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/count_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="10dp"
                                android:text="0"
                                android:textSize="20sp" />

                            <Button
                                android:id="@+id/increment_button"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_marginLeft="10dp"
                                android:backgroundTint="@color/green"
                                android:autoSizeMinTextSize="16dp"
                                android:text="+"
                                android:textColor="@color/black"
                                android:textSize="18dp" />


                        </LinearLayout>


                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/center_guideline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/blockEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        >

                        <TextView
                            android:id="@+id/numberEdit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:minWidth="40dp"
                            android:text=" №"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/valueSet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1"
                            android:minWidth="60dp"
                            android:hint="365.0"
                            android:inputType="number"
                            android:singleLine="true" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/appEdit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/green"
                            android:src="@android:drawable/ic_menu_edit"
                            android:tint="@color/green"
                            app:fabSize="normal" />
                    </LinearLayout>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btnShiftMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="@color/green"
                        android:src="@android:drawable/ic_menu_manage"
                        android:tint="@color/green"
                        android:visibility="gone"
                        app:fabSize="normal" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/blockSeries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/clearListPoint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="4"
                    android:backgroundTint="@color/green"
                    android:src="@android:drawable/ic_menu_delete"
                    android:tint="@color/green" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/resetChange"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="4"
                    android:backgroundTint="@color/green"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:tint="@color/green"
                    android:visibility="gone"
                    app:fabSize="normal" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/prev_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="4"
                    android:backgroundTint="@color/green"
                    android:src="@android:drawable/ic_media_rew"
                    android:tint="@color/green"
                    app:fabSize="normal" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/create_new_series_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="4"
                    android:backgroundTint="@color/green"
                    android:src="@android:drawable/ic_media_play"
                    android:tint="@color/green"
                    app:fabSize="normal" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/next_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="4"
                    android:backgroundTint="@color/green"
                    android:src="@android:drawable/ic_media_ff"
                    android:tint="@color/green"
                    app:fabSize="normal" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnTable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="4"
                    android:backgroundTint="@color/green"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:tint="@color/green"
                    app:fabSize="normal" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>