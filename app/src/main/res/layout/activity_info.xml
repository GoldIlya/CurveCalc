<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Хорда Версия 1.31"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="О программе: Перед началом работы создайте новый проект в окне проектов, выберите манеру измерений (вид графической диаграмы). В окне промера введите значения измереных стрел прогиба, поочередно подтверждая их клавишей \'ввод\' (enter). Далее с помощью клавиши \'+\' создавайте шаги планируемых подвижек самостоятельно изменяя расположение точек на графике и в сводной таблице."
            android:textSize="16dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Разработчики и консультанты:
            \n Программист: Курбатов Илья Евгеньевич
            \n Сценарий: Курбатов Иван Евгеньевич
            \n Консультанты бригадиры Эльгинской дистанции пути ПЧ-51:\n Дондуков Вячеслав Прокопьевич,
            \n Кочетков Владимир Александрович"
            android:textSize="16dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnTelega"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Телеграмм канал" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Обновления" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>